<SheetButton>:
    adaptive_size: True
    on_release: root.on_release
    MDBoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            MDIconButton:
                icon: root.icon
                _no_ripple_effect: True
        MDLabel:
            text: root.text
            halign: 'center'

<DecksScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '10dp'

        MDToolbar:
            elevation: 10
            title: 'Decks'

        ScrollView:

            MDList:
                id: md_list
                padding: 10

    MDFloatingActionButton:
        icon: 'plus-thick'
        pos_hint: {"center_x": 0.9, "center_y": 0.1}
        md_bg_color: app.theme_cls.primary_color
        on_release: root.add()

<StudyScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '10dp'

        MDToolbar:
            elevation: 10
            title: 'Deck Name'
            left_action_items: [['arrow-left', lambda x: root.back()]]

        MDLabel:
            text: root.text
            halign: 'center'
            valign: 'center'
            padding_y: '50dp'

    MDFloatingActionButton:
        icon: 'rotate-right'
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        on_release: root.flip()

<ViewScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '10dp'

        MDToolbar:
            elevation: 10
            title: 'Decks'
            left_action_items: [['arrow-left', lambda x: root.back()]]

        ScrollView:

            MDList:
                id: md_list
                padding: 0

    MDFloatingActionButton:
        icon: 'plus-thick'
        pos_hint: {"center_x": 0.9, "center_y": 0.1}
        md_bg_color: app.theme_cls.primary_color
        on_release: root.add()
